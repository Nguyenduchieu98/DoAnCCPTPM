
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="pricing-table-area pt-120 pb-85">
    <div class="container">
        <div class="row">
            <!--Single Pricing Table Start-->
            <div class="col-md-6 col-lg-3">
                <div class="single-pricing mb-35">
                    <div class="pricing-head">
                        <h4>Đơn Hàng</h4>
                    </div>
                    <div class="pricing-body">
                        <h5 class="table-price">@ViewBag.ThongKeDonHang<span class="desc-price"></span></h5>
                    </div>
                </div>
            </div>
            <!--Single Pricing Table End-->
            <!--Single Pricing Table Start-->
            <div class="col-md-6 col-lg-3">
                <div class="single-pricing active-table mb-35">
                    <div class="pricing-head">
                        <h4>Tổng Doanh Thu</h4>
                    </div>
                    <div class="pricing-body">
                        @{decimal TongDoanhThu = decimal.Parse(ViewBag.ThongKeDoanhThu.ToString());
                            TongDoanhThu = TongDoanhThu / 1000;
                        }
                        <h5 class="table-price">@TongDoanhThu.ToString("#,##") K<span class="desc-price">@*/Month*@</span></h5>
                    </div>
                </div>
            </div>
            <!--Single Pricing Table End-->
            <!--Single Pricing Table Start-->
            <div class="col-md-6 col-lg-3">
                <div class="single-pricing mb-35">
                    <div class="pricing-head">
                        <h4>Số Lượng Thành Viên</h4>
                    </div>
                    <div class="pricing-body">
                        <h5 class="table-price">@ViewBag.ThongKeThanhVien<span class="desc-price"></span></h5>
                    </div>
                </div>
            </div>
            <!--Single Pricing Table End-->
            <!--Single Pricing Table Start-->
            <div class="col-md-6 col-lg-3">
                <div class="single-pricing  active-table mb-35">
                    <div class="pricing-head">
                        <h4>Số Hàng Tồn</h4>
                    </div>
                    <div class="pricing-body">
                        <h5 class="table-price">1560<span class="desc-price"></span></h5>
                    </div>
                </div>
            </div>
            <!--Single Pricing Table End-->
        </div>
    </div>
</div>

